<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Static Colors -->
    <Color x:Key="Black">Black</Color>
    <Color x:Key="OffBlack">#1f1f1f</Color>

    <!-- Primary Colors -->
    <Color x:Key="Primary">#3B82F6</Color>
    <Color x:Key="PrimaryDark">#2563EB</Color>
    <Color x:Key="PrimaryDarkText">#242424</Color>

    <!-- Secondary Colors -->
    <Color x:Key="SecondaryLight">#E5E7EB</Color>
    <Color x:Key="SecondaryDark">#374151</Color>

    <!-- Tertiary -->
    <Color x:Key="Tertiary">#9333EA</Color>

    <!-- Background Colors -->
    <Color x:Key="BackgroundLight">#EAECEF</Color>
    <Color x:Key="BackgroundDark">#121212</Color>

    <Color x:Key="PanelBackgroundLight">#F0F0F0</Color>
    <Color x:Key="PanelBackgroundDark">#1F1F1F</Color>

    <Color x:Key="EditorBackgroundLight">#FFFFFF</Color>
    <Color x:Key="EditorBackgroundDark">#181818</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimaryLight">#1F2937</Color>
    <Color x:Key="TextPrimaryDark">#E5E7EB</Color>

    <Color x:Key="TextSecondaryLight">#4B5563</Color>
    <Color x:Key="TextSecondaryDark">#9CA3AF</Color>

    <Color x:Key="TextMutedLight">#6B7280</Color>
    <Color x:Key="TextMutedDark">#9CA3AF</Color>

    <!-- Syntax Highlighting -->
    <Color x:Key="KeywordColor">#D600AA</Color>
    <Color x:Key="StringColor">#10B981</Color>
    <Color x:Key="FunctionColor">#2563EB</Color>
    <Color x:Key="VariableColor">#DC2626</Color>

    <!-- Borders -->
    <Color x:Key="BorderLight">#D1D5DB</Color>
    <Color x:Key="BorderDark">#9CA3AF</Color>

    <!-- Grayscale -->
    <Color x:Key="Gray100">#F3F4F6</Color>
    <Color x:Key="Gray200">#E5E7EB</Color>
    <Color x:Key="Gray300">#D1D5DB</Color>
    <Color x:Key="Gray400">#9CA3AF</Color>
    <Color x:Key="Gray500">#6B7280</Color>
    <Color x:Key="Gray600">#4B5563</Color>
    <Color x:Key="Gray900">#1F2937</Color>
    <Color x:Key="Gray950">#111827</Color>
</ResourceDictionary>