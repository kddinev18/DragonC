<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="DragonC.GUI.Components.CompilatorSetupComponent.Components.FormalGrammarEditorComponent.Cmponents.FormalGrammarRuleView.FormalGrammarRuleView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:fa="clr-namespace:UraniumUI.Icons.FontAwesome;assembly=UraniumUI.Icons.FontAwesome"
    xmlns:input="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
    xmlns:inputLayout="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
    xmlns:l="clr-namespace:DragonC.GUI.Components.CompilatorSetupComponent.Components.FormalGrammarEditorComponent.Cmponents.FormalGrammarRuleView"
    x:DataType="l:FormalGrammarRuleViewModel">
    <HorizontalStackLayout Spacing="16">
        <input:SfMaskedEntry ClearButtonVisibility="WhileEditing" />
        <Image HeightRequest="20" WidthRequest="20">
            <Image.Source>
                <FontImageSource
                    FontFamily="FASolid"
                    Glyph="{x:Static fa:Solid.ArrowRight}"
                    Color="{StaticResource TextPrimaryLight}" />
            </Image.Source>
        </Image>
        <input:SfMaskedEntry ClearButtonVisibility="WhileEditing" />
        <input:SfMaskedEntry ClearButtonVisibility="WhileEditing" />
    </HorizontalStackLayout>
</ContentView>